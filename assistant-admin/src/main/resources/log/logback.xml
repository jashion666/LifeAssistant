<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Encoding>UTF-8</Encoding>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %5p [%t] %replace(%caller{1}){'\t|Caller.{1}0|\r\n', ''} - %m%n
            </pattern>
        </encoder>
    </appender>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.remoting" level="WARN"/>
    <logger name="org.springframework.scheduling.quartz" level="WARN"/>
    <logger name="ch.qos.logback" level="WARN"/>
    <logger name="com.assistant.dao" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
