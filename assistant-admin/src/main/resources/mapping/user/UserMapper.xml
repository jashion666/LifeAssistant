<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.assistant.dao.user.UserMapper">

    <sql id="userColumn">
        uid uid,
        username username,
        password password,
        phone phone,
        user_state userState
    </sql>
    <!---->
    <select id="findUserInfo" parameterType="Map">
        SELECT
          <include refid="userColumn"/>
        FROM USER
        WHERE username = #{username}
        AND passowrd = #{password}
    </select>

    <!--根据用户名查询用户以及状态-->
    <select id="findByUsername" parameterType="Map" resultType="com.assistant.entity.user.UserEntity">
        SELECT
          <include refid="userColumn"/>
        FROM USER
        WHERE username = #{username}
    </select>


</mapper>